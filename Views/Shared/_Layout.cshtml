<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Smart Hospital Sustainability System</title>
    <link rel="stylesheet" href="~/css/modern-theme.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    <nav class="navbar">
        <div style="display: flex; justify-content: space-between; align-items: center; max-width: 1400px; margin: 0 auto; width: 100%;">
            <a class="navbar-brand" asp-controller="Dashboard" asp-action="Index">
                🌱 SHSOS
            </a>
            <div style="display: flex; gap: 0.5rem; align-items: center; flex-wrap: wrap;">
                <a class="nav-link" asp-controller="Dashboard" asp-action="Index">
                    📊 Dashboard
                </a>
                <a class="nav-link" asp-controller="Energy" asp-action="Index">
                    ⚡ Energy
                </a>
                <a class="nav-link" asp-controller="Water" asp-action="Index">
                    💧 Water
                </a>
                <a class="nav-link" asp-controller="Waste" asp-action="Index">
                    ♻️ Waste
                </a>
                <a class="nav-link" asp-controller="Analytics" asp-action="Index">
                    📈 Analytics
                </a>
                <a class="nav-link" asp-controller="Alerts" asp-action="Index">
                    🔔 Alerts
                </a>
            </div>
        </div>
    </nav>

    <div class="container" style="max-width: 1400px;">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success fade-in">
                ✓ @TempData["SuccessMessage"]
            </div>
        }
        @if (TempData["WarningMessage"] != null)
        {
            <div class="alert alert-high fade-in">
                ⚠️ @TempData["WarningMessage"]
            </div>
        }
        
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer style="text-align: center; padding: 2rem; color: #6c757d; font-size: 0.875rem;">
        <div class="container">
            © 2026 Smart Hospital Sustainability System • Optimizing Resources for a Greener Future
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
