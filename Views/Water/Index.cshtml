@model IEnumerable<SHSOS.Models.WaterConsumption>

@{
    ViewData["Title"] = "Water Management";
}

<div class="fade-in">
    <div class="row mb-4">
        <div class="col-md-12">
            <h1 style="font-weight: 700; background: var(--primary-gradient); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">
                üíß Water Management
            </h1>
            <p style="color: var(--text-secondary);">Monitor and manage water consumption across all departments</p>
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="metric-card">
                <div class="metric-label">Total Consumption</div>
                <div class="metric-value">@ViewBag.TotalLiters</div>
                <small style="color: #6c757d;">Liters</small>
            </div>
        </div>
        <div class="col-md-4">
            <div class="metric-card">
                <div class="metric-label">Total Cost</div>
                <div class="metric-value">‚Çπ@Math.Round((decimal)ViewBag.TotalCost, 2)</div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="metric-card">
                <div class="metric-label">Leakages Detected</div>
                <div class="metric-value" style="color: @(ViewBag.LeakageCount > 0 ? "#ef4444" : "#10b981");">@ViewBag.LeakageCount</div>
                <small style="color: #6c757d;">@(ViewBag.LeakageCount > 0 ? "‚ö†Ô∏è Needs Attention" : "‚úì All Clear")</small>
            </div>
        </div>
    </div>

    <!-- Filters and Actions -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" style="display: flex; gap: 1rem; flex-wrap: wrap; align-items: end;">
                <div class="form-group" style="margin-bottom: 0; flex: 1; min-width: 200px;">
                    <label class="form-label">Department</label>
                    <select name="departmentId" class="form-control">
                        <option value="">All Departments</option>
                        @foreach (var dept in ViewBag.Departments)
                        {
                            <option value="@dept.Value" selected="@(dept.Value == ViewBag.SelectedDepartment?.ToString())">@dept.Text</option>
                        }
                    </select>
                </div>
                <div class="form-group" style="margin-bottom: 0; flex: 1; min-width: 150px;">
                    <label class="form-label">Filter</label>
                    <select name="leakageOnly" class="form-control">
                        <option value="">All Records</option>
                        <option value="true" selected="@(ViewBag.LeakageOnly == true)">Leakages Only</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">üîç Filter</button>
                <a asp-action="Create" class="btn btn-success">‚ûï Add Reading</a>
            </form>
        </div>
    </div>

    <!-- Data Table -->
    <div class="card">
        <div class="card-header">Water Consumption Records</div>
        <div class="card-body" style="padding: 0; overflow-x: auto;">
            <table class="table">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Department</th>
                        <th>Consumption (L)</th>
                        <th>Cost</th>
                        <th>Leakage</th>
                        <th>Weather</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr style="@(item.LeakageDetected ? "background-color: rgba(239, 68, 68, 0.1);" : "")">
                            <td>@item.ConsumptionDate.ToString("MMM dd, yyyy")</td>
                            <td>@item.Departments.DepartmentName</td>
                            <td><strong>@item.UnitsConsumedLiters</strong></td>
                            <td>‚Çπ@Math.Round(item.UnitsConsumedLiters * item.UnitCost, 2)</td>
                            <td>
                                @if (item.LeakageDetected)
                                {
                                    <span class="badge-high">‚ö†Ô∏è Detected</span>
                                }
                                else
                                {
                                    <span class="badge-low">‚úì None</span>
                                }
                            </td>
                            <td>@item.WeatherCondition</td>
                            <td>
                                <div style="display: flex; gap: 0.5rem;">
                                    <a asp-action="Details" asp-route-id="@item.ConsumptionID" class="btn btn-primary" style="padding: 0.5rem 1rem; font-size: 0.875rem;">View</a>
                                    <a asp-action="Edit" asp-route-id="@item.ConsumptionID" class="btn btn-outline" style="padding: 0.5rem 1rem; font-size: 0.875rem;">Edit</a>
                                    <a asp-action="Delete" asp-route-id="@item.ConsumptionID" class="btn btn-danger" style="padding: 0.5rem 1rem; font-size: 0.875rem;">Delete</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
