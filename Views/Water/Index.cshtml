@model IEnumerable<SHSOS.Models.WaterConsumption>

@{
    ViewData["Title"] = "Water Management";
}

<div class="fade-in">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-md-12">
            <h1 style="font-weight: 700; color: #3498db;">ðŸ’§ Water Management</h1>
            <p style="color: var(--text-secondary);">Tracking water usage and leak detection for sustainability</p>
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="stat-card">
                <div class="stat-icon" style="background: rgba(52, 152, 219, 0.1); color: #3498db;">ðŸš¿</div>
                <div class="stat-info">
                    <span class="label">Total Liters</span>
                    <span class="value">@ViewBag.TotalLiters<small style="font-size: 0.8rem;"> L</small></span>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="stat-card">
                <div class="stat-icon" style="background: rgba(46, 204, 113, 0.1); color: #2ecc71;">ðŸ’¸</div>
                <div class="stat-info">
                    <span class="label">Total Cost</span>
                    <span class="value">â‚¹@Math.Round((decimal)ViewBag.TotalCost, 0)</span>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="stat-card">
                <div class="stat-icon" style="background: @(ViewBag.LeakageCount > 0 ? "rgba(231, 76, 60, 0.1)" : "rgba(39, 174, 96, 0.1)"); color: @(ViewBag.LeakageCount > 0 ? "#e74c3c" : "#27ae60");">ðŸš°</div>
                <div class="stat-info">
                    <span class="label">Leaks Detected</span>
                    <span class="value">@ViewBag.LeakageCount <small style="font-size: 0.8rem;">Issues</small></span>
                </div>
            </div>
        </div>
    </div>

    <!-- Chart Row -->
    <div class="row mb-4">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">Water Usage Trend (Selection)</div>
                <div class="card-body">
                    <canvas id="waterPageChart" style="max-height: 250px;"></canvas>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">Resource Filters</div>
                <div class="card-body">
                    <form method="get" style="display: grid; gap: 1rem;">
                        <div class="form-group">
                            <label class="form-label">Department</label>
                            <select name="departmentId" class="form-control">
                                <option value="">All Departments</option>
                                @foreach (var dept in ViewBag.Departments)
                                {
                                    <option value="@dept.Value" selected="@(dept.Value == ViewBag.SelectedDepartment?.ToString())">@dept.Text</option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label class="form-label">Leakage Status</label>
                            <select name="leakageOnly" class="form-control">
                                <option value="">All Records</option>
                                <option value="true" selected="@(ViewBag.LeakageOnly == true)">Leaks Only</option>
                            </select>
                        </div>
                        <div style="display: flex; gap: 0.5rem;">
                            <button type="submit" class="btn btn-primary" style="flex: 1;">Filter Result</button>
                            <a asp-action="Create" class="btn btn-primary" style="background: #3498db; border-color: #3498db;">+ Add New</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Data Table -->
    <div class="card">
        <div class="card-header">Recent Consumption Data</div>
        <div class="card-body" style="padding: 0;">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Department</th>
                            <th>Volume (L)</th>
                            <th>Condition</th>
                            <th>Leakage</th>
                            <th>Cost</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.OrderByDescending(x => x.ConsumptionDate).Take(50))
                        {
                            <tr style="@(item.LeakageDetected ? "background-color: rgba(231, 76, 60, 0.05);" : "")">
                                <td>@item.ConsumptionDate.ToString("MMM dd, yyyy")</td>
                                <td><strong>@item.Departments?.DepartmentName</strong></td>
                                <td>@item.UnitsConsumedLiters</td>
                                <td style="color: var(--text-secondary);">@item.WeatherCondition</td>
                                <td>
                                    @if(item.LeakageDetected) {
                                        <span class="badge" style="background: rgba(231, 76, 60, 0.1); color: #e74c3c; font-weight: 700;">âš  Leak</span>
                                    } else {
                                        <span class="badge" style="background: rgba(39, 174, 96, 0.1); color: #27ae60;">âœ“ Clear</span>
                                    }
                                </td>
                                <td>â‚¹@Math.Round(item.UnitsConsumedLiters * item.UnitCost, 2)</td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.ConsumptionID" class="btn btn-outline-primary" style="padding: 0.25rem 0.6rem; font-size: 0.75rem; border-color: #3498db; color: #3498db;">Edit</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const chartData = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.OrderBy(x => x.ConsumptionDate).TakeLast(20).Select(x => new { Date = x.ConsumptionDate.ToString("MMM dd"), Value = x.UnitsConsumedLiters })));
        
        const ctx = document.getElementById('waterPageChart').getContext('2d');
        new Chart(ctx, {
            type: 'line',
            data: {
                labels: chartData.map(x => x.Date),
                datasets: [{
                    label: 'Water (L)',
                    data: chartData.map(x => x.Value),
                    borderColor: '#3498db',
                    backgroundColor: 'rgba(52, 152, 219, 0.1)',
                    fill: true,
                    tension: 0.4
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: { legend: { display: false } },
                scales: {
                    y: { beginAtZero: true, grid: { color: 'rgba(0,0,0,0.05)' } },
                    x: { grid: { display: false } }
                }
            }
        });
    </script>
}
