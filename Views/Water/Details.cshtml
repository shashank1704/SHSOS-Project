@model SHSOS.Models.WaterConsumption

@{
    ViewData["Title"] = "Water Reading Details";
}

<div class="fade-in">
    <div class="row mb-4">
        <div class="col-md-12">
            <h1 style="font-weight: 700; background: var(--primary-gradient); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">
                üíß Water Reading Details
            </h1>
            <p style="color: var(--text-secondary);">Comprehensive information about this water consumption record</p>
        </div>
    </div>

    @if (Model.LeakageDetected)
    {
        <div class="alert alert-danger" role="alert" style="margin-bottom: 2rem;">
            <strong>‚ö†Ô∏è Leakage Alert!</strong> This reading has detected a water leakage. Immediate investigation recommended.
        </div>
    }

    <div class="card" style="max-width: 900px; margin: 0 auto;">
        <div class="card-header">
            <div style="display: flex; justify-content: space-between; align-items: center;">
                <span>Record ID: #@Model.ConsumptionID</span>
                @if (Model.LeakageDetected)
                {
                    <span class="badge-high">‚ö†Ô∏è Leakage Detected</span>
                }
                else
                {
                    <span class="badge-low">‚úì No Issues</span>
                }
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="details-group">
                        <label class="details-label">Department</label>
                        <div class="details-value">
                            @Model.Departments.DepartmentName
                            <br />
                            <small style="color: #6c757d;">Hospital: @Model.Departments.hospitals.HospitalName</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="details-group">
                        <label class="details-label">Consumption Date</label>
                        <div class="details-value">@Model.ConsumptionDate.ToString("MMMM dd, yyyy")</div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="details-group">
                        <label class="details-label">Reading Time</label>
                        <div class="details-value">@Model.ReadingTime</div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="details-group">
                        <label class="details-label">Meter Reading</label>
                        <div class="details-value">@Model.ReadingEnd</div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="details-group">
                        <label class="details-label">Units Consumed</label>
                        <div class="details-value">
                            <strong style="font-size: 1.5rem; color: var(--primary);">@Model.UnitsConsumedLiters</strong>
                            <span style="color: #6c757d; font-size: 0.875rem;"> Liters</span>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="details-group">
                        <label class="details-label">Total Cost</label>
                        <div class="details-value">
                            <strong style="font-size: 1.5rem; color: var(--success);">‚Çπ@Math.Round(Model.UnitsConsumedLiters * Model.UnitCost, 2)</strong>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="details-group">
                        <label class="details-label">Unit Cost</label>
                        <div class="details-value">‚Çπ@Model.UnitCost per liter</div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="details-group">
                        <label class="details-label">Leakage Status</label>
                        <div class="details-value">
                            @if (Model.LeakageDetected)
                            {
                                <span style="color: #ef4444; font-weight: 600;">‚ö†Ô∏è Detected</span>
                            }
                            else
                            {
                                <span style="color: #10b981; font-weight: 600;">‚úì None</span>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="details-group">
                        <label class="details-label">Weather Category</label>
                        <div class="details-value">@(string.IsNullOrEmpty(Model.WeatherCategory) ? "Not Specified" : Model.WeatherCategory)</div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="details-group">
                        <label class="details-label">Weather Condition</label>
                        <div class="details-value">@(string.IsNullOrEmpty(Model.WeatherCondition) ? "Not Specified" : Model.WeatherCondition)</div>
                    </div>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.Remarks))
            {
                <div class="row">
                    <div class="col-md-12">
                        <div class="details-group">
                            <label class="details-label">Remarks</label>
                            <div class="details-value" style="white-space: pre-wrap;">@Model.Remarks</div>
                        </div>
                    </div>
                </div>
            }

            <div class="row">
                <div class="col-md-12">
                    <div class="details-group">
                        <label class="details-label">Recorded At</label>
                        <div class="details-value">
                            <small style="color: #6c757d;">@Model.RecordedAt.ToString("MMMM dd, yyyy hh:mm tt")</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div style="max-width: 900px; margin: 2rem auto; display: flex; gap: 1rem;">
        <a asp-action="Edit" asp-route-id="@Model.ConsumptionID" class="btn btn-primary" style="flex: 1; justify-content: center;">‚úèÔ∏è Edit</a>
        <a asp-action="Index" class="btn btn-outline" style="flex: 1; justify-content: center;">‚Üê Back to List</a>
        <a asp-action="Delete" asp-route-id="@Model.ConsumptionID" class="btn btn-danger" style="flex: 1; justify-content: center;">üóëÔ∏è Delete</a>
    </div>
</div>

<style>
.details-group {
    margin-bottom: 1.5rem;
}

.details-label {
    display: block;
    font-size: 0.875rem;
    font-weight: 600;
    color: #6c757d;
    margin-bottom: 0.5rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.details-value {
    font-size: 1.125rem;
    color: var(--text);
}
</style>
