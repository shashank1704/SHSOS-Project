@model SHSOS.Models.WaterConsumption

@{
    ViewData["Title"] = "Delete Water Reading";
}

<div class="fade-in">
    <div class="row mb-4">
        <div class="col-md-12">
            <h1 style="font-weight: 700; color: #ef4444;">
                üóëÔ∏è Delete Water Reading
            </h1>
            <p style="color: var(--text-secondary);">Are you sure you want to delete this record?</p>
        </div>
    </div>

    <div class="alert alert-danger" role="alert" style="max-width: 900px; margin: 0 auto 2rem;">
        <strong>‚ö†Ô∏è Warning!</strong> This action cannot be undone. The water consumption record will be permanently deleted from the system.
    </div>

    <div class="card" style="max-width: 900px; margin: 0 auto;">
        <div class="card-header" style="background-color: rgba(239, 68, 68, 0.1); border-bottom: 2px solid #ef4444;">
            <div style="display: flex; justify-content: space-between; align-items: center;">
                <span>Record ID: #@Model.ConsumptionID</span>
                @if (Model.LeakageDetected)
                {
                    <span class="badge-high">‚ö†Ô∏è Leakage Detected</span>
                }
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="details-group">
                        <label class="details-label">Department</label>
                        <div class="details-value">@Model.Departments.DepartmentName</div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="details-group">
                        <label class="details-label">Consumption Date</label>
                        <div class="details-value">@Model.ConsumptionDate.ToString("MMMM dd, yyyy")</div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4">
                    <div class="details-group">
                        <label class="details-label">Units Consumed</label>
                        <div class="details-value">
                            <strong style="font-size: 1.25rem;">@Model.UnitsConsumedLiters</strong>
                            <span style="color: #6c757d;"> Liters</span>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="details-group">
                        <label class="details-label">Total Cost</label>
                        <div class="details-value">
                            <strong style="font-size: 1.25rem;">‚Çπ@Math.Round(Model.UnitsConsumedLiters * Model.UnitCost, 2)</strong>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="details-group">
                        <label class="details-label">Leakage Status</label>
                        <div class="details-value">
                            @if (Model.LeakageDetected)
                            {
                                <span style="color: #ef4444; font-weight: 600;">‚ö†Ô∏è Detected</span>
                            }
                            else
                            {
                                <span style="color: #10b981; font-weight: 600;">‚úì None</span>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="details-group">
                        <label class="details-label">Weather Category</label>
                        <div class="details-value">@(string.IsNullOrEmpty(Model.WeatherCategory) ? "Not Specified" : Model.WeatherCategory)</div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="details-group">
                        <label class="details-label">Weather Condition</label>
                        <div class="details-value">@(string.IsNullOrEmpty(Model.WeatherCondition) ? "Not Specified" : Model.WeatherCondition)</div>
                    </div>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.Remarks))
            {
                <div class="row">
                    <div class="col-md-12">
                        <div class="details-group">
                            <label class="details-label">Remarks</label>
                            <div class="details-value" style="white-space: pre-wrap;">@Model.Remarks</div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <form asp-action="Delete" method="post" style="max-width: 900px; margin: 2rem auto;">
        <input type="hidden" asp-for="ConsumptionID" />
        <div style="display: flex; gap: 1rem;">
            <button type="submit" class="btn btn-danger" style="flex: 1;">
                üóëÔ∏è Yes, Delete This Record
            </button>
            <a asp-action="Index" class="btn btn-outline" style="flex: 1; justify-content: center;">
                ‚Üê Cancel
            </a>
        </div>
    </form>
</div>

<style>
.details-group {
    margin-bottom: 1.5rem;
}

.details-label {
    display: block;
    font-size: 0.875rem;
    font-weight: 600;
    color: #6c757d;
    margin-bottom: 0.5rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.details-value {
    font-size: 1.125rem;
    color: var(--text);
}
</style>
