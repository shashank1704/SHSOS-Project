@model SHSOS.Models.WaterConsumption

@{
    ViewData["Title"] = "Add Water Reading";
}

<div class="fade-in">
    <h1 style="font-weight: 700; margin-bottom: 2rem;">üíß Add Water Reading</h1>

    <div class="card" style="max-width: 800px; margin: 0 auto;">
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="DepartmentID" class="form-label">Department</label>
                            <select asp-for="DepartmentID" class="form-control" asp-items="ViewBag.Departments">
                                <option value="">Select Department</option>
                            </select>
                            <span asp-validation-for="DepartmentID" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="ConsumptionDate" class="form-label">Consumption Date</label>
                            <input asp-for="ConsumptionDate" type="date" class="form-control" />
                            <span asp-validation-for="ConsumptionDate" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="ReadingTime" class="form-label">Reading Time</label>
                            <input asp-for="ReadingTime" type="time" class="form-control" />
                            <span asp-validation-for="ReadingTime" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="ReadingEnd" class="form-label">Meter Reading</label>
                            <input asp-for="ReadingEnd" type="number" step="0.01" class="form-control" />
                            <span asp-validation-for="ReadingEnd" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="UnitsConsumedLiters" class="form-label">Units Consumed (Liters)</label>
                            <input asp-for="UnitsConsumedLiters" type="number" step="0.01" class="form-control" />
                            <span asp-validation-for="UnitsConsumedLiters" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="UnitCost" class="form-label">Unit Cost (‚Çπ)</label>
                            <input asp-for="UnitCost" type="number" step="0.01" class="form-control" value="0.05" />
                            <span asp-validation-for="UnitCost" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="WeatherCategory" class="form-label">Weather Category</label>
                            <select asp-for="WeatherCategory" class="form-control">
                                <option value="">Select Category</option>
                                <option value="Summer">Summer</option>
                                <option value="Monsoon">Monsoon</option>
                                <option value="Winter">Winter</option>
                            </select>
                            <span asp-validation-for="WeatherCategory" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="WeatherCondition" class="form-label">Weather Condition</label>
                            <select asp-for="WeatherCondition" class="form-control">
                                <option value="">Select Condition</option>
                                <option value="Clear">Clear</option>
                                <option value="Rainy">Rainy</option>
                                <option value="Cloudy">Cloudy</option>
                                <option value="Hot">Hot</option>
                            </select>
                            <span asp-validation-for="WeatherCondition" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label class="form-label">Leakage Detection</label>
                            <div style="display: flex; align-items: center; gap: 0.5rem; height: 48px;">
                                <input asp-for="LeakageDetected" type="checkbox" style="width: 20px; height: 20px;" />
                                <span>‚ö†Ô∏è Leakage detected in this reading</span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Remarks" class="form-label">Remarks</label>
                    <textarea asp-for="Remarks" class="form-control" rows="3" placeholder="Any additional notes or observations..."></textarea>
                    <span asp-validation-for="Remarks" class="text-danger"></span>
                </div>

                <div style="display: flex; gap: 1rem; margin-top: 2rem;">
                    <button type="submit" class="btn btn-success" style="flex: 1;">üíæ Save Reading</button>
                    <a asp-action="Index" class="btn btn-outline" style="flex: 1; justify-content: center;">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
