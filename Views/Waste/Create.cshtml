@model SHSOS.Models.WasteManagement

@{
    ViewData["Title"] = "Add Waste Record";
}

<div class="fade-in">
    <h1 style="font-weight: 700; margin-bottom: 2rem;">‚ôªÔ∏è Add Waste Record</h1>

    <div class="card" style="max-width: 800px; margin: 0 auto;">
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="DepartmentID" class="form-label">Department</label>
                            <select asp-for="DepartmentID" class="form-control" asp-items="ViewBag.Departments">
                                <option value="">Select Department</option>
                            </select>
                            <span asp-validation-for="DepartmentID" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="CollectionDate" class="form-label">Collection Date</label>
                            <input asp-for="CollectionDate" type="date" class="form-control" />
                            <span asp-validation-for="CollectionDate" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="WasteType" class="form-label">Waste Type</label>
                            <input asp-for="WasteType" type="text" class="form-control" placeholder="e.g., Plastic, Organic" />
                            <span asp-validation-for="WasteType" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="WasteCategory" class="form-label">Waste Category</label>
                            <select asp-for="WasteCategory" class="form-control">
                                <option value="">Select Category</option>
                                <option value="General">General</option>
                                <option value="Biomedical">Biomedical</option>
                                <option value="Hazardous">Hazardous</option>
                                <option value="Recyclable">Recyclable</option>
                            </select>
                            <span asp-validation-for="WasteCategory" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="WasteWeight" class="form-label">Waste Weight (Kg)</label>
                            <input asp-for="WasteWeight" type="number" step="0.01" class="form-control" />
                            <span asp-validation-for="WasteWeight" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="SegregationStatus" class="form-label">Segregation Status</label>
                            <select asp-for="SegregationStatus" class="form-control">
                                <option value="Segregated" selected>Segregated</option>
                                <option value="Not Segregated">Not Segregated</option>
                                <option value="Partial">Partial</option>
                            </select>
                            <span asp-validation-for="SegregationStatus" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label asp-for="DisposalMethod" class="form-label">Disposal Method</label>
                            <select asp-for="DisposalMethod" class="form-control">
                                <option value="">Select Disposal Method</option>
                                <option value="Incineration">Incineration</option>
                                <option value="Landfill">Landfill</option>
                                <option value="Recycling">Recycling</option>
                                <option value="Composting">Composting</option>
                                <option value="Autoclave">Autoclave (Biomedical)</option>
                            </select>
                            <span asp-validation-for="DisposalMethod" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="DisposalCost" class="form-label">Disposal Cost (‚Çπ)</label>
                            <input asp-for="DisposalCost" type="number" step="0.01" class="form-control" />
                            <span asp-validation-for="DisposalCost" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="DisinfectionCost" class="form-label">Disinfection Cost (‚Çπ)</label>
                            <input asp-for="DisinfectionCost" type="number" step="0.01" class="form-control" value="0" />
                            <span asp-validation-for="DisinfectionCost" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label asp-for="ComplianceStatus" class="form-label">Compliance Status</label>
                            <select asp-for="ComplianceStatus" class="form-control">
                                <option value="Compliant" selected>Compliant</option>
                                <option value="Non-Compliant">Non-Compliant</option>
                                <option value="Under Review">Under Review</option>
                            </select>
                            <span asp-validation-for="ComplianceStatus" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div style="display: flex; gap: 1rem; margin-top: 2rem;">
                    <button type="submit" class="btn btn-success" style="flex: 1;">üíæ Save Waste Record</button>
                    <a asp-action="Index" class="btn btn-outline" style="flex: 1; justify-content: center;">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
