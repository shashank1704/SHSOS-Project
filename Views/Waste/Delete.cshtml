@model SHSOS.Models.WasteManagement

@{
    ViewData["Title"] = "Delete Waste Record";
}

<div class="fade-in">
    <h1 style="font-weight: 700; margin-bottom: 2rem; color: var(--danger);">‚ö†Ô∏è Delete Waste Record</h1>

    <div class="card" style="max-width: 800px; margin: 0 auto;">
        <div class="card-header" style="background: rgba(231, 76, 60, 0.1); border-bottom-color: #e74c3c;">
            <h3 style="color: #e74c3c; margin: 0;">Confirm Deletion</h3>
        </div>
        <div class="card-body">
            <p style="font-size: 1.1rem; color: var(--text-secondary); margin-bottom: 2rem;">
                Are you sure you want to delete this waste management record? This action cannot be undone.
            </p>

            <div style="background: var(--bg-main); padding: 1.5rem; border-radius: 8px; margin-bottom: 2rem;">
                <div class="row">
                    <div class="col-md-6">
                        <dl>
                            <dt style="color: var(--text-secondary); font-size: 0.875rem;">Department</dt>
                            <dd style="font-weight: 600; margin-bottom: 1rem;">@Model.Departments?.DepartmentName</dd>

                            <dt style="color: var(--text-secondary); font-size: 0.875rem;">Collection Date</dt>
                            <dd style="font-weight: 600; margin-bottom: 1rem;">@Model.CollectionDate.ToString("MMMM dd, yyyy")</dd>

                            <dt style="color: var(--text-secondary); font-size: 0.875rem;">Waste Type</dt>
                            <dd style="font-weight: 600; margin-bottom: 1rem;">@Model.WasteType</dd>

                            <dt style="color: var(--text-secondary); font-size: 0.875rem;">Category</dt>
                            <dd style="font-weight: 600; margin-bottom: 0;">@Model.WasteCategory</dd>
                        </dl>
                    </div>
                    <div class="col-md-6">
                        <dl>
                            <dt style="color: var(--text-secondary); font-size: 0.875rem;">Weight</dt>
                            <dd style="font-weight: 600; margin-bottom: 1rem;">@Model.WasteWeight Kg</dd>

                            <dt style="color: var(--text-secondary); font-size: 0.875rem;">Total Cost</dt>
                            <dd style="font-weight: 600; margin-bottom: 1rem;">‚Çπ@Math.Round(Model.DisposalCost + Model.DisinfectionCost, 2)</dd>

                            <dt style="color: var(--text-secondary); font-size: 0.875rem;">Disposal Method</dt>
                            <dd style="font-weight: 600; margin-bottom: 1rem;">@Model.DisposalMethod</dd>

                            <dt style="color: var(--text-secondary); font-size: 0.875rem;">Compliance Status</dt>
                            <dd style="font-weight: 600; margin-bottom: 0;">
                                <span style="color: @(Model.ComplianceStatus == "Compliant" ? "#27ae60" : "#e74c3c");">@Model.ComplianceStatus</span>
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="WasteRecordID" />
                <div style="display: flex; gap: 1rem;">
                    <button type="submit" class="btn btn-danger" style="flex: 1;">üóëÔ∏è Confirm Delete</button>
                    <a asp-action="Index" class="btn btn-outline" style="flex: 1; justify-content: center;">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
