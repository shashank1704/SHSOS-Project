@model IEnumerable<SHSOS.Models.WasteManagement>

@{
    ViewData["Title"] = "Waste Management";
}

<div class="fade-in">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-md-12">
            <h1 style="font-weight: 700; color: #9b59b6;">‚ôªÔ∏è Waste Management</h1>
            <p style="color: var(--text-secondary);">Tracking waste segregation, disposal, and environmental compliance</p>
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="stat-card">
                <div class="stat-icon" style="background: rgba(155, 89, 182, 0.1); color: #9b59b6;">üì¶</div>
                <div class="stat-info">
                    <span class="label">Total Weight</span>
                    <span class="value">@ViewBag.TotalWeight<small style="font-size: 0.8rem;"> Kg</small></span>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card">
                <div class="stat-icon" style="background: rgba(39, 174, 96, 0.1); color: #27ae60;">üí∞</div>
                <div class="stat-info">
                    <span class="label">Total Cost</span>
                    <span class="value">‚Çπ@Math.Round((decimal)ViewBag.TotalDisposalCost, 0)</span>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card">
                <div class="stat-icon" style="background: @(ViewBag.NonCompliantCount > 0 ? "rgba(231, 76, 60, 0.1)" : "rgba(39, 174, 96, 0.1)"); color: @(ViewBag.NonCompliantCount > 0 ? "#e74c3c" : "#27ae60");">‚ö†Ô∏è</div>
                <div class="stat-info">
                    <span class="label">Non-Compliant</span>
                    <span class="value">@ViewBag.NonCompliantCount <small style="font-size: 0.8rem;">Issues</small></span>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card">
                <div class="stat-icon" style="background: rgba(149, 165, 166, 0.1); color: #7f8c8d;">üìë</div>
                <div class="stat-info">
                    <span class="label">Total Records</span>
                    <span class="value">@Model.Count()</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts and Filters -->
    <div class="row mb-4">
        <div class="col-md-7">
            <div class="card">
                <div class="card-header">Waste Generation Weight Trend</div>
                <div class="card-body">
                    <canvas id="wastePageChart" style="max-height: 250px;"></canvas>
                </div>
            </div>
        </div>
        <div class="col-md-5">
            <div class="card">
                <div class="card-header">System Filters</div>
                <div class="card-body">
                    <form method="get" style="display: grid; gap: 1rem;">
                        <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem;">
                            <div class="form-group">
                                <label class="form-label">Department</label>
                                <select name="departmentId" class="form-control">
                                    <option value="">All Units</option>
                                    @foreach (var dept in ViewBag.Departments)
                                    {
                                        <option value="@dept.Value" selected="@(dept.Value == ViewBag.SelectedDepartment?.ToString())">@dept.Text</option>
                                    }
                                </select>
                            </div>
                            <div class="form-group">
                                <label class="form-label">Category</label>
                                <select name="wasteCategory" class="form-control">
                                    <option value="">All Categories</option>
                                    <option value="General" selected="@(ViewBag.WasteCategory == "General")">General</option>
                                    <option value="Biomedical" selected="@(ViewBag.WasteCategory == "Biomedical")">Biomedical</option>
                                    <option value="Hazardous" selected="@(ViewBag.WasteCategory == "Hazardous")">Hazardous</option>
                                </select>
                            </div>
                        </div>
                        <div style="display: flex; gap: 0.5rem;">
                            <button type="submit" class="btn btn-primary" style="flex: 1;">Apply Filter</button>
                            <a asp-action="Create" class="btn btn-primary" style="background: #9b59b6; border-color: #9b59b6;">+ Log New Waste</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Data Table -->
    <div class="card">
        <div class="card-header">Historical Waste Management Records</div>
        <div class="card-body" style="padding: 0;">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Department</th>
                            <th>Waste Type</th>
                            <th>Category</th>
                            <th>Weight (Kg)</th>
                            <th>Method</th>
                            <th>Cost</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.OrderByDescending(x => x.CollectionDate).Take(50))
                        {
                            <tr style="@(item.ComplianceStatus != "Compliant" ? "background-color: rgba(231, 76, 60, 0.05);" : "")">
                                <td>@item.CollectionDate.ToString("MMM dd, yyyy")</td>
                                <td><strong>@item.Departments?.DepartmentName</strong></td>
                                <td style="color: var(--text-secondary);">@item.WasteType</td>
                                <td><span class="badge" style="background: rgba(149, 165, 166, 0.1); color: #7f8c8d;">@item.WasteCategory</span></td>
                                <td><strong>@item.WasteWeight</strong></td>
                                <td>@item.DisposalMethod</td>
                                <td>‚Çπ@Math.Round(item.DisposalCost + item.DisinfectionCost, 2)</td>
                                <td>
                                    @if(item.ComplianceStatus == "Compliant") {
                                        <span class="badge" style="background: rgba(39, 174, 96, 0.1); color: #27ae60;">‚úì Compliant</span>
                                    } else {
                                        <span class="badge" style="background: rgba(231, 76, 60, 0.1); color: #e74c3c;">‚ö†Ô∏è @item.ComplianceStatus</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const chartData = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.OrderBy(x => x.CollectionDate).TakeLast(20).Select(x => new { Date = x.CollectionDate.ToString("MMM dd"), Value = x.WasteWeight })));
        
        const ctx = document.getElementById('wastePageChart').getContext('2d');
        new Chart(ctx, {
            type: 'bar',
            data: {
                labels: chartData.map(x => x.Date),
                datasets: [{
                    label: 'Weight (Kg)',
                    data: chartData.map(x => x.Value),
                    backgroundColor: 'rgba(155, 89, 182, 0.7)',
                    borderRadius: 4
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: { legend: { display: false } },
                scales: {
                    y: { beginAtZero: true, grid: { color: 'rgba(0,0,0,0.05)' } },
                    x: { grid: { display: false } }
                }
            }
        });
    </script>
}
