@model SHSOS.Models.EnergyConsumption

@{
    ViewData["Title"] = "Edit Energy Reading";
}

<div class="fade-in">
    <h1 style="font-weight: 700; margin-bottom: 2rem;">âš¡ Edit Energy Reading</h1>

    <div class="card" style="max-width: 800px; margin: 0 auto;">
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="EnergyConsumptionID" />
                <input type="hidden" asp-for="RecordedAt" />
                
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="DepartmentID" class="form-label">Department</label>
                            <select asp-for="DepartmentID" class="form-control" asp-items="ViewBag.Departments">
                                <option value="">Select Department</option>
                            </select>
                            <span asp-validation-for="DepartmentID" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="ConsumptionDate" class="form-label">Consumption Date</label>
                            <input asp-for="ConsumptionDate" type="date" class="form-control" />
                            <span asp-validation-for="ConsumptionDate" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="ReadingTime" class="form-label">Reading Time</label>
                            <input asp-for="ReadingTime" type="time" class="form-control" />
                            <span asp-validation-for="ReadingTime" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="MeterReadingStart" class="form-label">Meter Reading Start</label>
                            <input asp-for="MeterReadingStart" type="number" step="0.01" class="form-control" />
                            <span asp-validation-for="MeterReadingStart" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="UnitsConsumedkWh" class="form-label">Units Consumed (kWh)</label>
                            <input asp-for="UnitsConsumedkWh" type="number" step="0.01" class="form-control" />
                            <span asp-validation-for="UnitsConsumedkWh" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="UnitCost" class="form-label">Unit Cost (â‚¹)</label>
                            <input asp-for="UnitCost" type="number" step="0.01" class="form-control" />
                            <span asp-validation-for="UnitCost" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="UsageCategory" class="form-label">Usage Category</label>
                            <select asp-for="UsageCategory" class="form-control">
                                <option value="Low">Low</option>
                                <option value="Normal">Normal</option>
                                <option value="High">High</option>
                            </select>
                            <span asp-validation-for="UsageCategory" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="form-label">Peak Hour Usage</label>
                            <div style="display: flex; align-items: center; gap: 0.5rem; height: 48px;">
                                <input asp-for="PeakHourFlag" type="checkbox" style="width: 20px; height: 20px;" />
                                <span>This is peak hour consumption</span>
                            </div>
                        </div>
                    </div>
                </div>

                <div style="display: flex; gap: 1rem; margin-top: 2rem;">
                    <button type="submit" class="btn btn-success" style="flex: 1;">ðŸ’¾ Update Reading</button>
                    <a asp-action="Index" class="btn btn-outline" style="flex: 1; justify-content: center;">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
